<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddF1AEB9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zheng.maptreasure.MainActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toolBar">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolBar"
        android:layout_marginTop="70dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_login_user"
            android:hint="用户名"
            android:drawableLeft="@drawable/ic_person_white"
            android:background="@drawable/edit_bg_long"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:inputType="textPassword"
            android:id="@+id/et_login_password"
            android:drawableLeft="@drawable/ic_lock_white"
            android:background="@drawable/edit_bg_long"
            android:hint="请输入密码"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_regist"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="注册"
            android:textSize="16dp"
            />
        <Button
            android:id="@+id/btn_Login"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="登录"
            android:textSize="16dp"
            android:enabled="false"
            android:background="#FF34B3"
            />
    </LinearLayout>
</RelativeLayout>
